<%- include("include/influencerHeader") -%>

<div class="section default-page-padding">
    <div class="container">
        <div class="row">

            <p class="influencer-name text-center">Influencer Dashboard</p>
            <h5 class="text-center alert alert-light"><%=user.fname%> <%=user.lname%></h5>



                <p class="hidden alert text-center" id="message"> </p>

            <!-- coupon details -->
                <div class="col-md-6 col-sm-12 alert alert-light">
                    <h6 class="">Date creates: <%=coupon.data.date_created_gmt.slice(0,10)%></h6>
                    <h6 class="">Coupon code: <%=user.code%></h6>
                    <h6 class="">Percentage Off: <%=coupon.data.amount%>%</h6>
                </div>      
                
                <!-- Coupon usage and earning -->
                <div class="col-md-6 col-sm-12 alert alert-light">
                    <h6 class="">Number of usage: <%=coupon.data.usage_count%> </h6>

                     <% if(user.bonusType == 1){%>
                        <h6 class="">Amount earned per usage: <%=user.bonus%>%</h6>
                    <%}else{%>
                        <h6 class="">Amount earned per usage: £<%=user.bonus%></h6>
                    <%}%> </h6>

                    <h5 class="">Total earning: £<span id="bonus-value">
                        <%=coupon.data.used_by.length * user.bonus%> 
                        </span><span class="link influencer-name" id="redeam-link">redeem</span>
                    </h5>
                </div>   

                <!-- Table -->
                <div class="col-sm-12">
                    <div class="influencer-data-table">
                        <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                                <th scope="col">SN</th>
                                <th scope="col">Used by</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for (i=coupon.data.used_by.length-1; i>=0; i--){%>
                                <tr class="subscrber-details">
                                    <td><%=coupon.data.used_by.length - i + 0%></td>
                                    <td><a href="customer?number=<%=coupon.data.used_by[i]%>"><%=coupon.data.used_by[i]%></a></td>
                                </tr>
                            <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
        </div>

        <div class="text-center" style="margin-top: 10px;">
            <a href="/logout" class="btn btn-danger btn-md">Logout</a>  
        </div>


    </div>
</div>


<%- include("include/influencerFooter") -%>
<script src="/min/influencer.js"></script>
<%- include("include/footer") -%>