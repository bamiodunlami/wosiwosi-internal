
<%- include('include/header') -%>
    <section class="order-page">
        <div class="container">
            <h6 class="alert alert-success text-center">Staff Perfomance</h6>
            
            <div class="row d-flex justify-content-center text-center alert alert-light">
                <p class="page-title">Select date and filter option</p>
                <div class="col-md-6 dateFilter text-center">
                            <div class="dateFilter-item">
                                <input type="date" id="date" class="form-control"/>
                            </div>
                            <div class="dateFilter-item">                                            
                                <button type="button" id="dayBtn" class="btn btn-secondary btn-sm">Day</button>
                                <button type="button" id="weekBtn" class="btn btn-secondary btn-sm">Weekly</button>
                                <button type="button" id="monthBtn" class="btn btn-secondary btn-sm">Month</button>
                            </div>
                </div>
            </div>

            <h5 class="alert alert-success text-center">Report type: <span id="reportType"></span></h5>
            <!-- loading -->
            <div class="hidden d-flex justify-content-center">
                <div class="spinner-border hidden" id="loading"  role="status">
                </div>
              </div>

            <!-- table -->
            <div class="row order-table">
                <div class="col-12">
                    <div class="">
                        <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                            <th scope="col">Staff Name</th>
                            <th scope="col">Packed</th>
                            </tr>
                            </thead>
                            <tbody class="" id="tableAppend">
                            </tbody>
                     </table>
                    </div>
                </div>
            </div>


        
            <!-- back to dashboard -->
            <div class="row">
                <div class="text-center">
                    <a class="btn btn-secondary btn-md action-button"  href="/report">Back to dashboard</a>
                </div>
            </div>

        </div>
    </section>


    <script src="/min/report.js"></script>
    <!-- <script src="/min/order.js"></script> -->
    <%- include('include/footer') -%>
