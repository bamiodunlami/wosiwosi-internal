
<%- include('include/header') -%>
    <section class="order-page">
        <div class="container">
            <h6 class="alert alert-success text-center">Staff Perfomance</h6>
            
            <div class="row d-flex justify-content-center text-center alert alert-light">
                <p class="page-title">Select date and filter option</p>
                <div class="col-md-6 dateFilter text-center">
                            <div class="dateFilter-item">
                                <input type="date" id="date" class="form-control"/>
                            </div>
                            <div class="dateFilter-item">                                            
                                <button type="button" id="dayBtn" class="btn btn-secondary">Day</button>
                                <button type="button" id="weekBtn" class="btn btn-secondary">Weekly</button>
                                <button type="button" id="monthBtn" class="btn btn-secondary">Month</button>
                                <button type="button" id="yearBtn" class="btn btn-secondary">Yea till date</button>
                            </div>
                </div>
            </div>

            <!-- table -->
            <div class="row order-table">
                <div class="col-12">
                    <table class="table table-striped table-hover ">
                        <thead>
                        <tr>
                            <th scope="col">Staff Name</th>
                            <!-- <th scope="col">Dry</th>
                            <th scope="col">Meat</th> -->
                            <th scope="col">Packed</th>
                        </tr>
                        </thead>
                        <tbody class="">
                            <% for(const eachReport of report){%>
                                <tr class="">
                                    <td class=""><%=eachReport.fname%></td>
                                    <!-- <td class=""><eachReport.pick.length></td>
                                    <td class=""><eachReport.meat.length></td> -->
                                    <td class=""><%=eachReport.pack.length%></td>
                                </tr>
                            <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        
            <!-- back to dashboard -->
            <div class="row">
                <div class="text-center">
                    <a class="btn btn-secondary btn-md action-button"  href="/report">Back to dashboard</a>
                </div>
            </div>

        </div>
    </section>

    <%- include('include/footerTemp') -%>
    <script src="/js/report.js"></script>
    <!-- <script src="/min/order.js"></script> -->
    <%- include('include/footer') -%>
