
<%- include('include/header') -%>


<!-- show page after reading the js -->

    <section class="order-page">
        <div class="container">

            <h6 class="alert alert-success text-center">Order to process</h6>

            <div class="row" >
                <div class="col-sm-12 col-12 text-center">
                    <p class="alert alert-warning">Orders available: <strong><%=order.length%></strong></p>
                </div>
            </div>

            <!-- table -->
            <div class="row order-table">
                <div class="col-12">
                    <table class="table table-striped table-hover ">
                        <thead>
                        <tr>
                            <th scope="col">Order</th>
                            <th scope="col">Meat Picker</th>
                            <th scope="col">Dry Picker</th>
                            <th scope="col">Packer</th>
                            <th scope="col">Note</th>
                            <th scope="col">Status</th>
                        </tr>
                        </thead>
                        <tbody class="">
                            <% for(i =0; i<order.length; i++ ){%>
                                <tr class="eachOrder">
                                    <td><a href="/single-order-processing?id=<%=order[i]%>"><%=order[i]%></a></td>
                                    <!-- ?id=<=order[i].id>&fromDate=<=fromDate>&toDate=<=toDate>&page=<=page>&fromTime=<=fromTime>&toTime=<=toTime> -->
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>
                                            <input class="form-check-input" type="checkbox">
                                        </td>
                                </tr>
                            <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        
            <!-- back to dashboard -->
            <div class="row">
                <div class="text-center">
                    <% if(user.role == "admin"){%>
                        <a class="btn btn-success btn-md" href="/admin/online">Back to dashboard</a>
                        <a class="" href="/clearboard">Clear board</a>
                   <% }else{%>
                        <a class="btn btn-success btn-md" href="/staff/online">Back to dashboard</a>
                    <%}%>

                </div>
            </div>

        </div>
    </section>


<%- include('include/footerTemp') -%>
<script src="/min/orderToProcess.js"></script>
<%- include('include/footer') -%>
