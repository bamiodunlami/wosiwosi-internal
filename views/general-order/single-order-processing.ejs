
<%- include('include/header') -%>
    <section class="order-page">
        <div class="container">
            <h6 class="alert alert-success text-center">Order <%=order.id%> (<%=order.billing.first_name%> <%=order.billing.last_name%>)</h6>
            <!-- order details -->



        <!-- order details -->
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-warning">
                    <h6 class="text-center">Customer Note</h6>
                    <div class="text-center"><%=order.customer_note%></div>
                </div>
            </div>

            <!-- notes -->
            <div class="col-md-12 alert alert-dark">
                    <div class="alert alert-light">
                        <h6 class="text-center">Staff Note</h6>
                        <div class="note-msg" id="note-msg">
                            <!-- if note is available from db -->
                            <%if(orderFromDB){%>
                                <% for (let i =0; i<orderFromDB.note.length; i++){%>
                                    <div class="alert alert-danger"> <%=orderFromDB.note[i].fname%>: <%=orderFromDB.note[i].note%></div>
                                    <%}%>
                            <%}%>
                            <!--  -->
                        </div>
                    </div>

                <div class="">
                    <textarea class="note-input" id="note" maxlength="60" placeholder="Kindly add your note"></textarea>
                    <input type="hidden" id="orderNumber" value="<%=order.id%>">
                    <input type="hidden" id="userId" value="<%=user.username%>">
                    <input type="hidden" id="fname" value="<%=user.fname%>">
                    <div>
                        <button class="btn btn-sm btn-warning" id="sendNoteBtn">Drop note</button>
                    </div>
                </div>

            </div>
        </div>


            <!-- table -->
            <div class="row order-table">
                <div class="col-12">
                    <table class="table table-striped table-hover ">
                        <thead>
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Product</th>
                            <th scope="col">QTY</th>
                            <th scope="col">Paid</th>
                        </tr>
                        </thead>
                        <tbody class="">
                            <% for(i =0; i<order.line_items.length; i++ ){%>
                                <tr>
                                    <td><a href="<%=order.line_items[i].image.src%>"><img src="<%=order.line_items[i].image.src%>" width="40px" height="40px" alt="image"></a></td>
                                    <td><%=order.line_items[i].name%> 
                                        <%if(order.line_items[i].meta_data.length>2){%>
                                            <h6 style="color: #ff0000;"><%=order.line_items[i].meta_data[1].display_value%></h6>
                                        <%}%>
                                    </td>
                                    <td style="background-color:#beffeac9;"><%=order.line_items[i].quantity%></td>
                                    <td>Â£<%=order.line_items[i].subtotal%></td>
                                </tr>
                            <%}%>
                        </tbody>
                    </table>
                </div>

            </div>

            <!-- actions -->
        <div> 
            <%if(user.role == "admin"){%>
                <a href="/remove-from-order?order=<%=order.id%>" class="btn btn-danger btn-sm">Remove from order to be process today</a>
            <%}%>
            <a href="/processingorder" class="btn btn-warning btn-sm">Back</a>
            <a href="/complete?id=<%=order.id%>" class="btn btn-success btn-sm" id="done-btn">Completed</a>
        </div>

        </div>
    </section>

    <%- include('include/footerTemp') -%>
    <script src="/min/singleOrderProcessing.js"></script>
    <%- include('include/footer') -%>
