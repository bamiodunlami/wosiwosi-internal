            <!-- table -->
            <div class=" order-table">
                <div class="col-sm-12">
                    <table class="table table-striped table-hover ">
                        <thead>
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Product</th>
                            <th scope="col">QTY</th>
                            <th scope="col">Paid</th>
                            <th scope="col">Ref</th>
                            <th scope="col">Rep</th>
                        </tr>
                        </thead>
                        <tbody class="">
                            <% for(i =0; i<order.line_items.length; i++ ){%>
                                <tr>
                                    <td><a href="<%=order.line_items[i].image.src%>"><img src="<%=order.line_items[i].image.src%>" width="40px" height="40px" alt="image"></a></td>
                                    <td><%=order.line_items[i].name%> 
                                        <%if(order.line_items[i].meta_data.length>2){%>
                                            <h6 style="color: #ff0000;"><%=order.line_items[i].meta_data[1].display_value%></h6>
                                        <%}%>
                                    </td>
                                    <td style="background-color:#beffeac9;"><%=order.line_items[i].quantity%></td>
                                    <td><%=order.currency_symbol%><%=order.line_items[i].subtotal%></td>
                                    <td style="background-color:#ffaa0bc9;"><input class="form-check-input refund" type="checkbox" id="refund"></td>
                                    <td style="background-color:#d48a00;"><input class="form-check-input replace" type="checkbox" id="replace"></td>
                                </tr>
                            <%}%>
                        </tbody>
                    </table>
                </div>

            </div>